@import "lib/bootstrap.css"
@import "lib/font-awesome.css"

standard-margin = 20px
half-margin     = standard-margin/2
double-margin   = standard-margin*2

border-box()
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box

body
  margin 20px 0

.display-inline
	display inline

.relative
	position relative

.small-font
	font-size 10.5px

.align-left
	text-align left

.align-center
  text-align center

.float-left
	float left

.float-right
	float right

.no-margin-bottom
  margin-bottom 0

.no-margin-top
	margin-top 0

.no-margin, input.no-margin
	margin 0

.standard-padding
	padding standard-margin

.standard-margin-top
	margin-top standard-margin

.right-panel
	position absolute
	top 0
	right 0

.border1
	border 1px solid #ddd

.main-container
	@extend .standard-padding
	@extend .border1
	border-top 0
	margin-top -20px
	min-height 400px

.full
	width 100%

.first-half, .second-half
	width 48.5%

.first-half
	@extend .float-left

.second-half
	@extend .float-right

textarea
	border-box()
	height 200px

object
	width: 100%

.yt-box
	width 50%

.yt-box:nth-child(2n+1)
	@extend .float-left
	margin-left -(half-margin)

.yt-box:nth-child(2n)
	@extend .float-right
	margin-right -(half-margin)

.room-space textarea
	@extend .full

.personal-info
	@extend .align-left
	@extend .small-font
	color #555555

.nav-tabs > .float-right
	float right

input.low-input
	@extend .small-font
	height 12px
	line-height normal

@media (max-width: 767px)
	input.low-input
		@extend .small-font
		height 22px
		min-height 22px
		line-height normal
	
	#nav-space
		padding-top 40px 

	.first-half, .second-half
		float none
		width 100%

	textarea
		height 125px

	.yt-box
		float none
		width 100%

	.yt-box:nth-child(2n+1)
		margin-left 0

	.yt-box:nth-child(2n)
		margin-right 0

.half-margin-top
	margin-top half-margin

.room-control
	@extend .small-font
	position absolute
	top 3px
	right 2px

.room-privacy-label
	@extend .display-inline
	position relative
	top 2px

input.room-privacy-checkbox
	@extend .no-margin
	margin-top -2px

.btn-close
	margin-left half-margin

::-webkit-scrollbar 
	width 6px

::-webkit-scrollbar-track { }

::-webkit-scrollbar-thumb
	background rgba(2,168,236,.2)
	border-radius 2px

::-webkit-scrollbar-button 
	background none
	height 2px